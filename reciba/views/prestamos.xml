<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- SEQUENCE for Reciba Préstamos   -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <record id="sequence_reciba_prestamos" model="ir.sequence">
      <field name="name">Reciba Préstamos</field>
      <field name="code">self.prestamo</field>
      <field name="active">TRUE</field>
      <field name="prefix">PRES</field>
      <field name="padding">6</field>
      <field name="number_next">1</field>
      <field name="number_increment">1</field>
    </record>


    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- PRESTAMOS - LIST VIEW                      -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->    
    <record id="view_reciba_prestamos_list" model="ir.ui.view">
      <field name="name">Préstamos</field>
      <field name="model">reciba.prestamos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="contacto_id"/>
          <field name="limite_prestamo"/>
          <field name="fecha_prestamo"/>
          <field name="hora_prestamo"/>
          <field name="cantidad"/>
          <field name="state"/>                 
        </tree>
      </field>
    </record>


    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- PRESTAMOS - FORM VIEW                      -->
    <!--::::::::::::::::::::::::::::::::::::::::::::--> 
    <record id="view_reciba_prestamos_form" model="ir.ui.view"> 
        <field name="name">Préstamos</field>
        <field name="model">reciba.prestamos</field>
        <field name="arch" type="xml"> 
            <form> 
                <header>
                    <button name="marcar_saldado" type="object" string="Marcar como Saldado" class="btn-primary" icon="fa-file-text" attrs="{'invisible':[('state','=','settled')]}"/>
                    <button name="cancelar" type="object" string="Cancelar" class="btn-primary" attrs="{'invisible':['state','=','open')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,settled"/>
                </header>
                <sheet> 
                    <div class="oe_left oe_title">
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contacto_id"/>
                            <field name="limite_prestamo"/>
                            <field name="fecha_prestamo"/>
                            <field name="hora_prestamo"/>
                            <field name="cantidad"/>
                            <field name="fecha_cobro" attrs="{'invisible':[('state','=','open')]}"/>
                            <field name="hora_cobro" attrs="{'invisible':[('state','=','open')]}"/>                            
                        </group>    
                    </group> 
                    <group>
                        <field name="observaciones"/>
                    </group>                                            
                </sheet>              
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>               
            </form> 
        </field> 
    </record>


    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- PRESTAMOS - ACTION                         -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->          
    <record model="ir.actions.act_window" id="reciba_prestamos_action">
        <field name="name">Préstamos</field>
        <field name="res_model">reciba.prestamos</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea el primer préstamo
            </p>
        </field>
    </record>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- PRESTAMOS - MENUITEMS                      -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <menuitem id="contactos_menu" name="Contactos" parent="reciba.menu_reciba_root" sequence="5"/>
    <menuitem id="contactos_prestamos_menu" name="Préstamos" parent="reciba.contactos_menu" action="reciba_prestamos_action" sequence="1"/>    

  </data>  
</odoo> 