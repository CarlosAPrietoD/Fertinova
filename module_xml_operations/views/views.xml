    <record id="view_xml_operations_form" model="ir.ui.view">
        <field name="name">XML Operations</field>
        <field name="model">xml.operations</field>
        <field name="arch" type="xml">
          <form>
              <group>
                <field name="name" />
                <field name="xml_file" />
                <field name="check_ppd" />
                <field name="check_payment" />
              </group>                  
              
              <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
              </div>                              
          </form>     
        </field>
    </record> 

