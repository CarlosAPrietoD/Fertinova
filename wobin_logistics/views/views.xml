<odoo>
  <data>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!--   ACTIONS                                  -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->

    <!--\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->
    <!--  Actions for menu of Quotations  -->
    <!--//////////////////////////////////-->

    <!-- QUOTATIONS - GENERAL ACTION -->
    <record id="action_logistics_quotations" model="ir.actions.act_window">
      <field name="name">Quotations</field>
      <field name="res_model">logistics.quotations</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!--\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->
    <!--  Actions for menu of Contracts   -->
    <!--//////////////////////////////////-->

    <!-- CONTRACTS - GENERAL ACTION -->
    <record id="action_logistics_contracts" model="ir.actions.act_window">
      <field name="name">Contracts</field>
      <field name="res_model">logistics.contracts</field>
      <field name="view_mode">tree,form</field>
    </record>   



    <!--\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->
    <!--  Actions for menu of Trips     -->
    <!--//////////////////////////////////-->

    <!-- TRIPS - GENERAL ACTION -->
    <record id="action_logistics_trips" model="ir.actions.act_window">
      <field name="name">Trips</field>
      <field name="res_model">logistics.trips</field>    
      <field name="view_mode">tree,form</field>      
    </record>
    <!-- ROUTES ANALYSIS {from Contract Assignments} - ACTION -->
    <record id="action_logistics_routes" model="ir.actions.act_window">
        <field name="name">Routes</field>
        <field name="res_model">logistics.contracts</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="view_logs_routes_lst"/>
        <field name="domain"></field> 
    </record>      
    


    <!--\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->
    <!--  Actions for menu of Reports     -->
    <!--//////////////////////////////////-->    

    <!-- TRIPS ANALYSIS according to Contracts - ACTION -->
    <record id="action_logistics_contract_analysis" model="ir.actions.act_window">
        <field name="name">Analysis (Contracts)</field>
        <field name="res_model">logistics.contracts</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="view_trips_analysis_contract"/>
        <field name="domain"></field> 
    </record>
    <!-- TRIPS ANALYSIS - ACTION -->
    <record id="action_trips_analysis" model="ir.actions.act_window">
        <field name="name">Analysis (Trips)</field>
        <field name="res_model">logistics.trips</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="view_trips_analysis"/>
        <field name="domain"></field> 
    </record> 
    <!-- TRIPS PROFITABILITY ANALYSIS Report - ACTION -->
    <record id="action_logistics_profit" model="ir.actions.act_window">
        <field name="name">Trips Profitability Report</field>
        <field name="res_model">logistics.trips</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="view_profitability_trips"/>
        <field name="domain"></field> 
    </record>              
    <!-- CONTRACT STATUS ANALYSIS Report - ACTION -->
    <record id="action_logistics_contract_status" model="ir.actions.act_window">
        <field name="name">Contract Status Report</field>
        <field name="res_model">logistics.contracts</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="view_contracts_status"/>
        <field name="domain"></field> 
    </record>   
    <!-- DISCHARGED TRIPS ANALYSIS Report - ACTION -->
    <record id="action_logistics_discharge_trips" model="ir.actions.act_window">
        <field name="name">Discharged Trips Report</field>
        <field name="res_model">logistics.trips</field>
        <field name="view_mode">tree</field>        
        <field name="view_id" ref="wobin_logistics.view_discharged_trips"/>
        <field name="domain">[('state', '=', 'discharged')]</field> 
    </record>     
        



    
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- MENUITEMS -->    
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    
    <!-- Top Menu Item {ROOT} -->
    <menuitem name="Wobin Logistics" 
              id="wobin_logistics.menu_root" 
              web_icon="wobin_logistics,static/description/icon.png"
              groups="wobin_logistics.group_wl_access_logistics"/>

    <!-- Menu Categories {SUB MENUITEMS} -->
    <!--<menuitem name="Quotationes" id="quotations_menu_1" parent="wobin_logistics.menu_root"/>-->
    <menuitem name="Contracts" id="contracts_menu_2" parent="wobin_logistics.menu_root"/>
    <menuitem name="Trips" id="trips_menu_3" parent="wobin_logistics.menu_root"/>
    <menuitem name="Reports" id="reports_menu_4" parent="wobin_logistics.menu_root"/>
  
    <!-- Actions for Sub Menu Items {DISPLAY OF GENERAL VIEWS} -->
    
    <!-- QUOTATIONS 
    <menuitem name="Quotations" 
              id="wobin_logistics.menuitem_quotations" 
              parent="wobin_logistics.quotations_menu_1"
              action="wobin_logistics.action_logistics_quotations" 
              sequence="1"/> -->                             

    <!-- CONTRACTS -->    
    <menuitem name="Contracts" 
              id="wobin_logistics.sub_menuitem_contracts" 
              parent="wobin_logistics.contracts_menu_2"
              action="wobin_logistics.action_logistics_contracts" 
              sequence="1"/>

    <!-- TRIPS -->    
    <menuitem name="Trips" 
              id="wobin_logistics.sub_menuitem_trips" 
              parent="wobin_logistics.trips_menu_3"
              action="wobin_logistics.action_logistics_trips" 
              sequence="1"/>             
    <menuitem name="Routes" 
              id="wobin_logistics.sub_menuitem_routes" 
              parent="wobin_logistics.trips_menu_3"
              action="wobin_logistics.action_logistics_routes" 
              sequence="2"/>    

    <!-- REPORTS -->   
    <menuitem name="Analysis (Contracts)" 
              id="wobin_logistics.sub_menuitem_contract_analysis" 
              parent="wobin_logistics.reports_menu_4"
              action="wobin_logistics.action_logistics_contract_analysis" 
              groups="wobin_logistics.group_wl_access_analysis"
              sequence="1"/>
    <menuitem name="Analysis (Trips)" 
              id="wobin_logistics.sub_menuitem_analysis" 
              parent="wobin_logistics.reports_menu_4"
              action="wobin_logistics.action_trips_analysis" 
              groups="wobin_logistics.group_wl_access_analysis"
              sequence="2"/>    
    <menuitem name="Trips Profitability" 
              id="wobin_logistics.sub_menuitem_profitability" 
              parent="wobin_logistics.reports_menu_4"
              action="wobin_logistics.action_logistics_profit" 
              groups="wobin_logistics.group_wl_access_analysis"
              sequence="3"/>                                          
    <menuitem name="Contract Status" 
              id="wobin_logistics.sub_menuitem_cont_status" 
              parent="wobin_logistics.reports_menu_4"
              action="wobin_logistics.action_logistics_contract_status" 
              groups="wobin_logistics.group_wl_access_analysis"
              sequence="4"/>
    <menuitem name="Discharged Trips" 
              id="wobin_logistics.sub_menuitem_discharged_trips" 
              parent="wobin_logistics.reports_menu_4"
              action="wobin_logistics.action_logistics_discharge_trips" 
              groups="wobin_logistics.group_wl_access_analysis"
              sequence="5"/>                             

  </data>
</odoo>