<odoo>
  <data>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- SEQUENCE for name of Logistics Contracts -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <record id="sequence_logistics_trips" model="ir.sequence">
      <field name="name">Logistics Contracts</field>
      <field name="code">self.contract</field>
      <field name="active">TRUE</field>
      <field name="prefix">CONTR</field>
      <field name="padding">6</field>
      <field name="number_next">1</field>
      <field name="number_increment">1</field>
    </record>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- VIEWS {LISTS, FORMS, SEARCH} -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->

    <!-- TRIPS - LIST VIEW -->
    <record id="view_logistics_contracts_list" model="ir.ui.view">
      <field name="name">Contracts</field>
      <field name="model">logistics.contracts</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="client_id"/>
          <field name="sales_order_id"/>
          <field name="product_id"/>
          <field name="covenant_qty"/>
          <field name="tariff"/>
          <field name="origin_destiny" widget="many2many_tags"/>
          <field name="remitter"/>
          <field name="recipient"/>
          <field name="shipping"/>                   
        </tree>
      </field>
    </record>    

    <!-- CONTRACTS - FORM VIEW -->
    <record id="view_logistics_contracts_form" model="ir.ui.view"> 
        <field name="name">Contracts</field> 
        <field name="model">logistics.contracts</field> 
        <field name="arch" type="xml"> 
            <form> 
                <header>
                    <button name="create_trip" type="object" string="Create Trip" class="oe_highlight" attrs="{'invisible': [('name', '=', 'New')]}"/>
                </header>
                <sheet> 
                    <div class="oe_left oe_title">
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="sales_order_id"/>
                            <field name="product_id"/>
                            <field name="covenant_qty"/>
                            <field name="tariff"/>                    
                        </group>                                                 
                        <group>
                            <field name="origin_destiny" widget="many2many_tags"/>                       
                            <field name="remitter"/>
                            <field name="recipient"/>
                            <field name="shipping"/>                                         
                      </group> 
                  </group> 
                  <group>
                      <field name="observations"/>
                  </group>                                            
                </sheet>              
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>               
            </form> 
        </field> 
    </record>

  </data>  
</odoo> 