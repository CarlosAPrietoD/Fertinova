<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--=================================Recepciones========================================-->
        <record model="ir.ui.view" id="form_view_reception">
            <field name="name">reciba.ticket.form</field>
            <field name="model">reciba.ticket</field>
            <field name="arch" type="xml">
                <form string="Recepciones">
                    <sheet>
                        <group>
                            <field name="name"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_view_reception" model="ir.ui.view">
            <field name="name">reciba.ticket.reception.tree</field>
            <field name="model">reciba.ticket</field>
            <field name="arch" type="xml">
                <tree string="Tracking Value" delete="0" default_order="id desc">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="tickets_reception" model="ir.actions.act_window">
            <field name="name">Recepciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reciba.ticket</field>
            <!--<field name="domain">['|',('field','=','credit_limit'),('field','=','grace_payment_days')]</field>-->
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_name': 'Holaaaa'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a track value.
                </p>
            </field>
        </record>

        <record id="reciba_tree_ticket_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="tickets_reception" />
            <field name="view_id" ref="form_view_reception" />
            <field name="view_mode">form</field>
        </record>

        <record id="reciba_tree_ticket_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="tickets_reception" />
            <field name="view_id" ref="tree_view_reception" />
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Reciba" id="reciba_root" sequence="40"/>

        <menuitem id="operation_menu" name="Tipo de operaciÃ³n" parent="reciba_root" sequence="1"/>

        <menuitem id="reception_ticket_menu" name="Recepcion" parent="operation_menu" action="tickets_reception" sequence="1" />

    </data>

</odoo>
