<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.module.category" id="module_category_reciba_management">
            <field name="name">Reciba</field>
            <field name="description">Helps you handle your quotations, sale orders and invoicing.</field>
            <field name="sequence">30</field>
        </record>

        <record id="group_reciba_responsable" model="res.groups">
            <field name="name">Responsabe</field>
            <field name="comment">Usuario con acceso a todos los apartados del modulo</field>
            <field name="category_id" ref="module_category_reciba_management"/>
        </record>

        <record id="group_reciba_comercial" model="res.groups">
            <field name="name">Comercial</field>
            <field name="comment">Usuario con acceso a todos los apartados del modulo</field>
            <field name="category_id" ref="module_category_reciba_management"/>
        </record>

        <record id="group_reciba_auditoria" model="res.groups">
            <field name="name">Auditoria</field>
            <field name="comment">Usuario con acceso a todos los apartados del modulo</field>
            <field name="category_id" ref="module_category_reciba_management"/>
        </record>

        <record id="group_reciba_control" model="res.groups">
            <field name="name">Control</field>
            <field name="comment">Usuario con acceso a todos los apartados del modulo</field>
            <field name="category_id" ref="module_category_reciba_management"/>
        </record>

        <record id="reciba_ticket_company_rule" model="ir.rule">
            <field name="name">Reciba multi company rule</field>
            <field name="model_id" ref="model_reciba_ticket"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

</odoo>
