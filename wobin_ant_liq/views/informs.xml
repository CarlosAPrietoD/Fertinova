<odoo>
  <data>
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- VIEWS {LISTS, FORMS, SEARCH} -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->

    <!-- INFORMS - SEARCH VIEW -->    
    <record id="view_informs_search" model="ir.ui.view"> 
      <field name="name">Informs</field>
      <field name="model">hr.employee</field>
        <field name="arch" type="xml"> 
            <search> 
              <field name="id"/>     
              <field name="name"/>                     
              <field name="advance_sum_amnt"/>                 
              <field name="comprobation_sum_amnt"/>
              <field name="amount_to_settle"/> 
              <filter name="flag_act_emp" string="With Active Process" 
                      domain="[('flag_employee_active', '=', True)]" />  
            </search> 
        </field> 
    </record>    

    <!-- INFORMS - LIST VIEW -->
    <record id="view_informs_list" model="ir.ui.view">
      <field name="name">Informs</field>
      <field name="model">hr.employee</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>                     
            <field name="advance_sum_amnt"/>                 
            <field name="comprobation_sum_amnt"/>
            <field name="amount_to_settle"/>   
        </tree>
      </field>
    </record>  

    <!-- DEBTS INFORM - LIST VIEW -->
    <record id="view_debts_inform_list" model="ir.ui.view">
      <field name="name">Settlements</field>
      <field name="model">wobin.settlements</field>
      <field name="arch" type="xml">
        <tree>
          <!--<field name="trip_id"/>-->
          <field name="operator_id"/>                
          <field name="date"/> 
          <field name="advance_sum_amnt"/>
          <field name="comprobation_sum_amnt"/>
          <field name="total_settlement"/>
          <field name="amount_to_settle"/>                    
          <field name="name"/>
          <field name="payment_related_id"/>
          <field name="advance_related_id"/>                                     
          <field name="state"/>   
        </tree>
      </field>
    </record>      

  </data>  
</odoo> 