<odoo>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- REPORT & TEMPLATE -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->    

    <report
        id="reporte_liquidacion_formato"
        model="wobin.settlements"
        string="Imprimir Liquidación"
        name="wobin_ant_liq.reporte_liquidacion_formato"
        file="wobin_ant_liq.liquidacion_formato"
        report_type="qweb-pdf" />

    <template id="reporte_liquidacion_formato">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!--Estilo de hoja-->
                    <div class="page" style="margin-left:50px; margin-right:50px;">
                        
                        <!--Título-->
                        <h3 class="text-center p-1 font-weight-bold"><span t-field="doc.display_name"/></h3>

                        <!--Cabecera de formato con 2 tablas contiguas-->
                        <!--1° Tabla-->
                        <table class="float-left table w-50" style="font-size: 12px; padding: 2px; margin-top: 30px;">
                            <tbody>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Cliente</td>
                                    <td><span t-field="doc.order_id.partner_id"/></td>
                                </tr>                            
                                <tr>
                                    <td class="table-secondary font-weight-bold">Referencia del pedido</td>
                                    <td><span t-field="doc.order_id.name"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Producto</td>
                                    <td><span t-field="doc.product_id.name"/></td>
                                </tr> 
                                <tr>
                                    <td class="table-secondary font-weight-bold">Descripción</td>
                                    <td><span t-field="doc.name"/></td>
                                </tr>                                
                                <tr>
                                    <td class="table-secondary font-weight-bold">Cantidad Pedida</td>
                                    <td><span t-field="doc.product_uom_qty"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Cantidad Entregada</td>
                                    <td><span t-field="doc.order_id.qty_delivered"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Cantidad Facturada</td>
                                    <td><span t-field="doc.order_id.qty_invoiced"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Unidad de medida</td>
                                    <td><span t-field="doc.product_uom.name"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Compañía</td>
                                    <td><span t-field="doc.company_id.name"/></td>
                                </tr>                                                                                                                                                                                                                                                                                           
                            </tbody>
                        </table>

                        <!--2° Tabla-->
                        <table class="float-right table w-50" style="font-size: 12px; padding: 2px; margin-top: 30px;">
                            <tbody>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Precio unitario</td>
                                    <td><span t-field="doc.price_unit"/></td>
                                </tr>                            
                                <tr>
                                    <td class="table-secondary font-weight-bold">Subtotal</td>
                                    <td><span t-field="doc.price_subtotal"/></td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Impuestos</td>
                                </tr> 
                                <tr t-foreach="doc.tax_id" t-as="l">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="table-secondary font-weight-bold">Total de impuestos</td>
                                    <td><span t-field="doc.price_tax"/></td>
                                </tr>                                
                                <tr>
                                    <td class="table-secondary font-weight-bold">Total</td>
                                    <td><span t-field="doc.price_total"/></td>
                                </tr>                                                                                                                                                                                                                                                                                          
                            </tbody>
                        </table>

                        <!--Tablas de Facturas, Notas de Crédito y Movimientos de Inventario-->
                        <!--Tabla de Facturas-->
                        <table class="table table-condensed" style="font-size: 12px; margin-top: 40px;">
                            <tr>
                                <th class="table-secondary">Referencia factura</th>
                                <th class="table-secondary">Fecha de factura</th>
                                <th class="table-secondary">Descripción</th>   
                                <th class="table-secondary">Cuenta</th>                           
                                <th class="table-secondary">Cantidad</th>
                                <th class="table-secondary">Unidad de medida</th>
                                <th class="table-secondary">Total (sin impuestos)</th>
                                <th class="table-secondary">Estado de la factura</th>
                            </tr>                             
                            <tr t-foreach='doc.invoice_lines' t-as='line'>
                                <td><span t-esc="line.invoice_id.number"/></td>                            
                                <td><span t-esc="line.invoice_id.date_invoice" t-options='{"widget": "date"}'/></td>
                                <td><span t-esc="line.invoice_id.name"/></td>
                                <td><span t-esc="line.account_id.name"/></td>
                                <td><span t-esc="line.quantity"/></td>
                                <td><span t-esc="line.uom_id.name"/></td>
                                <td><span t-esc="line.price_subtotal"/></td>
                                <td><span t-esc="line.invoice_id.state"/></td>
                            </tr>  
                        </table>  

                        <!--Tabla de Notas de Crédito-->


                        <!--Tabla de Movimientos de Inventario-->
                        <table class="table table-condensed" style="font-size: 12px; margin-top: 40px;">
                            <tr>
                                <th class="table-secondary">Referencia</th>
                                <th class="table-secondary">Fecha</th>
                                <th class="table-secondary">Fecha prevista</th>   
                                <th class="table-secondary">Documento origen</th>                           
                                <th class="table-secondary">Producto</th>
                                <th class="table-secondary">Cantidad hecha</th>
                                <th class="table-secondary">Operador</th>
                                <th class="table-secondary">Placas</th>
                                <th class="table-secondary">Unidad de medida</th>
                                <th class="table-secondary">Estado</th>
                                <th class="table-secondary">Importe</th>
                            </tr>                             
                            <tr t-foreach='doc.move_ids' t-as='line'>
                                <td><span t-esc="line.reference"/></td>                            
                                <td><span t-esc="line.date" t-options='{"widget": "date"}'/></td>
                                <td><span t-esc="line.date_expected"/></td>
                                <td><span t-esc="line.origin"/></td>
                                <td><span t-esc="line.product_id.name"/></td>
                                <td><span t-esc="line.quantity_done"/></td>
                                <td><span t-esc="line.operador"/></td>
                                <td><span t-esc="line.placas"/></td>
                                <td><span t-esc="line.product_uom.name"/></td>
                                <td><span t-esc="line.state"/></td>
                                <td><span t-esc="line.importe"/></td>
                            </tr>  
                        </table>                          
                        

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>