<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--Product Product Form Inherited where new checkbox was added-->
    <record id="product_product_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="/form/sheet/notebook/page[@name='purchase']//field[@name='supplier_taxes_id']" position="before">        
            <field name="validation_price_unit" modifiers="{}" />        
          </xpath>          
        </field>
    </record>

  </data>
</odoo>   

