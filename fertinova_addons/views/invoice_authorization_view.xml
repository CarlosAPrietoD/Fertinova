<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
       
    <!--View Inheritance to add 3 fields in Payments-->
    <record id="view_accnt_paymts_inhrt" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">            
            <!--Add 3 new fields into Payments Form-->
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="bank_account_id"/>
            </xpath>
            <xpath expr="//field[@name='payment_transaction_id']" position="after">
                <field name="invoices_id"/>
                <field name="purchases_id"/>   
            </xpath>            
        </field>
    </record>   

    <!--View Inheritance -->
    <record id="view_account_invoices_authorization" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">                     
            <!--Add new button to indicate Authorized state-->    
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <button name="change_state_authorized" class="oe_highlight" states="open" string="Authorize" type="object" groups="fertinova_addons.group_autorizacion"/>                
            </xpath>
            <!--Avoid that some users cannot see Register button in Clients > Invoices-->
            <xpath expr="//button[@name='148']" position="attributes">
                <attribute name="groups">fertinova_addons.group_tesoreria</attribute>
                <attribute name="states">authorized</attribute>
            </xpath>            
            <!--Add new sequence to state after Authorized-->    
            <xpath expr="//button[@name='148']" position="attributes">                
                <attribute name="states">authorized</attribute>
            </xpath>                         
            <!-- Statusbar widget should also contain the new status of Authorized-->
            <field name="state" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,open,authorized,paid,cancel"/>
            </field>          
        </field>
    </record>

    <record id="view_account_invoices2_authorization" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">                     
            <!--Add new button to indicate Authorized state-->    
            <xpath expr="//button[@name='148']" position="before">
                <button name="change_state_authorized" class="oe_highlight" states="open" string="Authorize" type="object" groups="fertinova_addons.group_autorizacion"/>                
            </xpath>
            <!--Avoid that some users cannot see Register button in Providers > Bills-->
            <xpath expr="//button[@name='148']" position="attributes">
                <attribute name="groups">fertinova_addons.group_tesoreria</attribute>
                <attribute name="states">authorized</attribute>
            </xpath>            
            <!--Add new sequence to state after Authorized-->    
            <xpath expr="//button[@name='202']" position="attributes">                
                <attribute name="states">authorized</attribute>
            </xpath>                         
            <!-- Statusbar widget should also contain the new status of Authorized-->
            <field name="state" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,open,authorized,paid,cancel"/>
            </field>           
        </field>
    </record>    

    
  </data>
</odoo>