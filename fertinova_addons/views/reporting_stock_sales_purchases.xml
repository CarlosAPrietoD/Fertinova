<odoo>
  <data>

    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!--     VIEWS                                  -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->  

    <!-- ANALYSIS of Sales Report with Stock Pickings with Wastes and Surplus - LIST VIEW -->
    <record id="view_analysis_stock_report_sales" model="ir.ui.view">
      <field name="name">Análisis de Surtimiento OV</field>
      <field name="model">stock.picking</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sale_id"/>
          <field name="name"/>
          <field name="delivery_amount"/>
          <field name="is_waste" invisible="1"/>
          <field name="waste_id"/> 
          <field name="waste_amount"/>  
          <field name="is_surplus" invisible="1"/>  
          <field name="surplus_id"/>
          <field name="surplus_amount"/>
          <field name="eff_qty_amount"/> 
          <field name="state" invisible="1"/>                  
        </tree>
      </field>
    </record>   

    <!-- ANALYSIS of Purchase Report with Stock Pickings with Wastes and Surplus - LIST VIEW -->
    <record id="view_analysis_stock_report_purchase" model="ir.ui.view">
      <field name="name">Análisis de Surtimiento OC</field>
      <field name="model">stock.picking</field>
      <field name="arch" type="xml">
        <tree>
          <field name="purchase_id"/>
          <field name="name"/>
          <field name="delivery_amount"/>
          <field name="is_waste" invisible="1"/>
          <field name="waste_id"/> 
          <field name="waste_amount"/>  
          <field name="is_surplus" invisible="1"/>  
          <field name="surplus_id"/>
          <field name="surplus_amount"/>
          <field name="eff_qty_amount"/> 
          <field name="state" invisible="1"/>  
        </tree>
      </field>
    </record> 



    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!--   ACTIONS                                  -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->

    <!-- Sales Report with Stock Picking with Wastes and Surplus - GENERAL ACTION -->
    <record id="action_stock_report_sales" model="ir.actions.act_window">
      <field name="name">Análisis de Surtimiento OV</field>
      <field name="res_model">stock.picking</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_analysis_stock_report_sales"/>     
      <field name="domain">[('is_waste', '=', False), ('is_surplus', '=', False)]</field>
    </record>

    <!-- Purchase Report with Stock Picking with Wastes and Surplus - GENERAL ACTION -->
    <record id="action_stock_report_purchase" model="ir.actions.act_window">
      <field name="name">Análisis de Surtimiento OC</field>
      <field name="res_model">stock.picking</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_analysis_stock_report_purchase"/>      
      <field name="domain">[('purchase_id.name', 'not ilike', ''), ('is_waste', '=', False), ('is_surplus', '=', False)]</field>
    </record>    



    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!--   SUB MENUITEMS                            -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- New Menus for Reports of Stock Picking with Wastes and Surplus -->
    <menuitem name="Análisis de Surtimiento OV" id="menu_stock_rep_sales" action="action_stock_report_sales" parent="stock.menu_warehouse_report" sequence="160"/>
    <menuitem name="Análisis de Surtimiento OC" id="menu_stock_rep_purchase" action="action_stock_report_purchase" parent="stock.menu_warehouse_report" sequence="170"/>

  </data>  
</odoo>     
