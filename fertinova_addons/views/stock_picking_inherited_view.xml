<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>  

    <!--  TICKET 108  -  DEVELOPED BY SEBASTIAN MENDEZ  -  START   -->    
    <!--Stock Picking Form Inherited where new column analytic_account was added-->
    <record id="stock_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>	
        <field name="arch" type="xml">
            <!--Add 2 new buttons for waste and surplus in header-->
            <xpath expr="//form/header" position="inside">
                <button string="Excedentes" name="open_stock_picking_surplus" type="object" class="oe_highlight"/>
            </xpath>
            <field name="origin" position="after">
                <field name="origin_transfer_id" readonly="True"/>
            </field>             

            <!--[START] Add required attribute to fields-->
            <field name="partner_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>  
            <field name="origin" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>         
            <!--[END] Add required attribute to fields-->

            <xpath expr="/form/sheet/notebook/page/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="analytic_account_id" attrs="{'readonly': [('state', 'not in', ('draft', 'assigned'))]}" />
                <field name="analytic_tag_id" attrs="{'readonly': [('state', 'not in', ('draft', 'assigned'))]}" widget="many2many_tags" />
            </xpath>
        </field>
    </record> 
    <!--  TICKET 108  -  DEVELOPED BY SEBASTIAN MENDEZ  -  END   -->      

  </data>
</odoo>  
